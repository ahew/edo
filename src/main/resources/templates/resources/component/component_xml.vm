#set( $builder = $bean.edoBuilder)
#set( $beanVar = $constants.getLowerCase($bean.name))
#set( $beanClass = $bean.name)
#set( $springPrep = $constants.getLowerCase($builder.springBeanPreposition))
#set( $tableName = $bean.tableName)
#set( $componentCode = "${builder.projectName}_${beanVar}")
<?xml version="1.0" encoding="UTF-8"?>
<component>
	<code>#if($builder.plugin)$builder.pluginName#else$componentCode#end</code>
	<description>${beanClass}</description>
	<installation>
		<tableMapping>
			<datasource name="servDataSource">
				<class>${builder.packageName}.${constants.initPackage}.$beanClass</class>
			</datasource>
		</tableMapping>
		<environment code="production">
			<defaultSqlResources>
				<datasource name="portDataSource">
#if($builder.plugin)
classpath:sql/plugins/${bean.getEdoBuilder().getPluginName()}/port_data_production.sql
#else
classpath:sql/misc/$componentCode/port_data_production.sql
#end
				</datasource>
				<datasource name="servDataSource">
#if($builder.plugin)
classpath:sql/plugins/${builder.pluginName}/serv_data_production.sql
#else
classpath:sql/misc/$componentCode/serv_data_production.sql
#end
				</datasource>
			</defaultSqlResources>
		</environment>
		<environment code="test">
			<defaultSqlResources>
				<datasource name="portDataSource">
#if($builder.plugin)
classpath:sql/plugins/${bean.getEdoBuilder().getPluginName()}/port_data_test.sql
#else
classpath:sql/misc/$componentCode/port_data_test.sql
#end
				</datasource>
				<datasource name="servDataSource">
#if($builder.plugin)
classpath:sql/plugins/${bean.getEdoBuilder().getPluginName()}/serv_data_test.sql
#else
classpath:sql/misc/$componentCode/serv_data_test.sql
#end
				</datasource>
			</defaultSqlResources>
		</environment>
	</installation>
</component>